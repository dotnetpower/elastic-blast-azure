apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: blast-dbs-pvc
spec:
  dataSource:
    name: blast-dbs-snapshot
    kind: VolumeSnapshot
    apiGroup: snapshot.storage.k8s.io
  storageClassName: ${ELB_SC_NAME}
  accessModes:
    - ReadOnlyMany
  resources:
    requests:
      storage: ${ELB_PD_SIZE}
